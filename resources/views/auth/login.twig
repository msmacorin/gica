{# empty Twig template #}
{% extends "page" %}

{% block content %}
    <section id="post" class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>{{ trans('go.login') }}</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <form method="POST" action="{{ prefix_url ~ '/login' }}">
                        <input type="hidden" name="_token" value="{{ csrf_token() }}" />
                        <input type="hidden" name="remember" value="false" />
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="email">{{ trans('go.email') }}</label>
                                <input type="email" class="form-control" placeholder="{{ trans('go.email') }}" required="required" name="email" value="{{ old('email') }}" />
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="password">{{ trans('go.password') }}</label>
                                <input type="password" class="form-control password-input margin-5" placeholder="{{ trans('go.password') }}" required="required" name="password"/>
                            </div>
                        </div>
                        <br>
                        {% if errors.any() %}
                            <div class="row">
                                <div class="form-group col-xs-12">
                                    <div class="alert alert-danger">
                                        {% for error in errors.all() %}
                                            <p>{{ error }}</p>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="{{ trans('go.enter') }}">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}