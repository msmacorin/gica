<section id="search" class="content">
    <div class="map-search col-lg-12" tabindex="-1">
        <div id="map"></div>
        <div class="search">
            <div class="input-group col-md-12">
                <input type="text" id="location" class="form-control input-lg city_autocomplete" placeholder="{{ trans('go.search') }}" />
                <input type="hidden" id="latitude" />
                <input type="hidden" id="longitude" />
                <span class="input-group-btn">
                    <button id="btnSearch" class="btn btn-info btn-lg" type="button" title="{{ trans('go.search') }}">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    {% if user|length > 0 %}
                        <button id="btnAdd" class="btn btn-success btn-lg" type="button" title="{{ trans('go.add') }}">
                            <i class="glyphicon glyphicon-plus"></i>
                        </button>
                    {% endif %}
                </span>
            </div>
        </div>
    </div>
</section>